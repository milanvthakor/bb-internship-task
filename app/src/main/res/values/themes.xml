<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Dukan" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/sunglow_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/persimmon_500</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/pt_sans_regular</item>
        <item name="android:windowContentTransitions">true</item>
        <!-- Make status bar icons light for the api level from 23 onwards -->
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <!-- Remove Search View Hint Icon -->
        <item name="searchViewStyle">@style/SearchView</item>
    </style>

    <!-- Theme for activity with no action bar or toolbar -->
    <style name="Theme.Dukan.FullScreen">
        <item name="windowNoTitle">true</item>
    </style>

    <!-- TextView Styles -->
    <style name="Theme.Dukan.AppName">
        <item name="android:fontFamily">@font/lobster_regular</item>
        <item name="android:textColor">@color/persimmon_500</item>
        <item name="android:textSize">60sp</item>
    </style>

    <style name="Theme.Dukan.AppName.Toolbar">
        <item name="android:textSize">30sp</item>
    </style>

    <style name="Theme.Dukan.TextView_Button">
        <item name="android:textAllCaps">true</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="SearchView" parent="Widget.AppCompat.Light.SearchView">
        <item name="searchHintIcon">@null</item>
    </style>
</resources>